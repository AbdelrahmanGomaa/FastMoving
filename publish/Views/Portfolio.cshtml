@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "masterTemplate.cshtml";
}

  <!-- Content -->
    <div class="page-content bg-white">
        <!-- inner page banner -->
        <div class="dlab-bnr-inr dlab-bnr-inr-sm overlay-primary bg-pt" style="background-image:url(images/banner/bnr1.jpg);">
            <div class="container">
                <div class="dlab-bnr-inr-entry">
                    <h1 class="text-white">Portfolio Full Width</h1>
					<!-- Breadcrumb row -->
					<div class="breadcrumb-row">
						<ul class="list-inline">
							<li><a href="javascript:void(0);">Home</a></li>
							<li>Portfolio Full Width</li>
						</ul>
					</div>
					<!-- Breadcrumb row END -->
                </div>
            </div>
        </div>
        <!-- inner page banner END -->
        <!-- contact area -->
        <div class="content-block">
			<!-- Portfolio  -->
			<div class="section-full content-inner portfolio text-uppercase" id="portfolio">
				<div class="site-filters clearfix center  m-b40">
					<ul class="filters" data-bs-toggle="buttons">
						<li data-filter="" class="btn active">
							<input type="radio">
							<a href="javascript:void(0);" class="site-button-secondry radius-sm"><span>All</span></a> 
						</li>
						<li data-filter=".web" class="btn">
							<input type="radio">
							<a href="javascript:void(0);" class="site-button-secondry radius-sm"><span>Web</span></a> 
						</li>
						<li data-filter=".advertising" class="btn">
							<input type="radio">
							<a href="javascript:void(0);" class="site-button-secondry radius-sm"><span>Advertising</span></a> 
						</li>
						<li data-filter=".branding" class="btn">
							<input type="radio">
							<a href="javascript:void(0);" class="site-button-secondry radius-sm"><span>Branding</span></a> 
						</li>
						<li data-filter=".design" class="btn">
							<input type="radio">
							<a href="javascript:void(0);" class="site-button-secondry radius-sm"><span>Design</span></a> 
						</li>
						<li data-filter=".photography" class="btn">
							<input type="radio">
							<a href="javascript:void(0);" class="site-button-secondry radius-sm"><span>Photography</span></a> 
						</li>
					</ul>
				</div>
				<div class="clearfix">
					<ul id="masonry" class="dlab-gallery-listing gallery-grid-4 gallery mfp-gallery port-style1">


							@{
								var selection = Umbraco.Content(Guid.Parse("55fcbfda-504b-4d7d-be27-93dd485a47c0"))
								.ChildrenOfType("portfolioDetails")
								.Where(x => x.IsVisible());
							}
							
								@foreach (var item in selection)
								{
									var PortfolioDetailsHeroImges = item.Value<MediaWithCrops>("portfolioDetailsHeroImges");

									


									<li class="web design card-container col-lg-3 col-md-6 col-xs-12 col-sm-6 p-a0 wow zoomIn" data-wow-delay="0.2s">
										<div class="dlab-box dlab-gallery-box">
											<div class="dlab-media dlab-img-overlay1 dlab-img-effect">
												<a href="@item.Url()"> <img src="@PortfolioDetailsHeroImges?.MediaUrl()"  alt=""> </a>
												<div class="overlay-bx">
													<div class="overlay-icon align-b text-white text-left"> 
														<div class="text-white text-left port-box">
															<a href="@item.Url()"><h5>@item.Value("portfolioDetailsName")</h5></a>
															<p>@item.Value("portfolioDetailsSummary")</p>
												<a href="@PortfolioDetailsHeroImges?.MediaUrl()" class="mfp-link portfolio-fullscreen" title="@item.Value("portfolioDetailsName")"><i class="ti-fullscreen icon-bx-xs"></i></a>
														</div>
													</div>
												</div>
											</div>
										</div>
									</li>
								}
							



					
						
						


					</ul>
				</div>
			</div>
        </div>
		<!-- contact area END -->
    </div>
    <!-- Content END-->